<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enhanced Tailwind Form</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-blue-900 via-black to-gray-900 flex flex-col justify-center items-center h-screen p-4">

    <!-- Header Link -->
    <h1 class="text-2xl mb-10 text-white hover:text-blue-400 transition duration-200">
        <a href="./read" class="flex items-center space-x-1">
            <i class="ri-user-search-line"></i>
            <span>Read Users</span>
        </a>
    </h1>

    <!-- Form Container -->
    <form action="/create" method="post" autocomplete="off"
        class="relative bg-gradient-to-tr from-white/10 via-gray-800/50 to-white/10 shadow-2xl rounded-2xl p-10 w-full max-w-md backdrop-blur-md border border-white/20 transition duration-300 hover:shadow-blue-400/50">
        
        <h2 class="text-3xl font-bold mb-6 text-center text-gray-200 tracking-wide">User Form</h2>

        <!-- Name Field -->
        <div class="mb-6">
            <label for="name" class="block text-gray-300 text-sm font-semibold mb-2">Name</label>
            <input type="text" id="name" name="name" placeholder="Enter your name"
                class="bg-gray-800/40 shadow-inner border border-gray-500 rounded-lg w-full py-3 px-4 text-white focus:outline-none focus:ring-2 focus:ring-blue-300 transition duration-200 placeholder-gray-400">
        </div>

        <!-- Email Field -->
        <div class="mb-6">
            <label for="email" class="block text-gray-300 text-sm font-semibold mb-2">Email</label>
            <input type="email" id="email" name="email" placeholder="Enter your email"
                class="bg-gray-800/40 shadow-inner border border-gray-500 rounded-lg w-full py-3 px-4 text-white focus:outline-none focus:ring-2 focus:ring-blue-300 transition duration-200 placeholder-gray-400">
        </div>

        <!-- Age Field -->
        <div class="mb-6">
            <label for="age" class="block text-gray-300 text-sm font-semibold mb-2">Age</label>
            <input type="number" id="age" name="age" placeholder="Enter your age"
                class="bg-gray-800/40 shadow-inner border border-gray-500 rounded-lg w-full py-3 px-4 text-white focus:outline-none focus:ring-2 focus:ring-blue-300 transition duration-200 placeholder-gray-400">
        </div>

        <!-- Image URL Field -->
        <div class="mb-6">
            <div class="flex justify-between items-center">
                <label for="image" class="block text-gray-300 text-sm font-semibold">Image URL</label>
                <a href="https://www.google.com" target="_blank" class="text-sm font-bold text-blue-400 hover:text-blue-300 transition duration-200 flex items-center space-x-1">
                    <i class="ri-search-line"></i>
                    <span>Search Image</span>
                </a>
            </div>
            <input type="url" id="image" name="imageUrl" placeholder="Enter Image URL"
                class="bg-gray-800/40 shadow-inner border border-gray-500 rounded-lg w-full py-3 px-4 text-white focus:outline-none focus:ring-2 focus:ring-blue-300 transition duration-200 placeholder-gray-400">
        </div>

        <!-- Submit Button -->
        <div class="flex items-center justify-center mt-8">
            <button type="submit"
                class="bg-gradient-to-r from-blue-600 to-blue-800 hover:from-blue-500 hover:to-blue-700 text-white font-bold py-2 px-8 rounded-full shadow-lg hover:shadow-blue-500/50 transition duration-200 transform hover:-translate-y-1 focus:outline-none focus:ring-4 focus:ring-blue-400 focus:ring-opacity-50">
                Submit
            </button>
        </div>
    </form>

</body>

</html>
