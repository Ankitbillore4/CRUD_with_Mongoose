<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Card</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-gray-900 via-black to-gray-900 flex flex-col items-center p-6">
    <!-- Title and Back Link -->
    <h1 class="text-center mb-8 text-4xl font-bold text-white mt-4">All Users</h1>
    <h1 class="text-center text-blue-400 text-lg mb-10">
        <a href="/" class="hover:underline">Back To Home</a>
    </h1>

    <!-- User Cards Container -->
    <div class="users grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 w-full max-w-6xl px-6">
        <% if (users.length > 0) { %>
            <% users.forEach((user) => { %>
                <!-- User Card -->
                <div class="card bg-white/10 rounded-xl p-8 shadow-lg backdrop-blur-lg transform hover:scale-105 transition duration-300">
                    <div class="flex flex-col items-center">
                        <!-- User Image -->
                        <div class="h-48 w-48 bg-gray-300 rounded-full overflow-hidden shadow-lg mb-6">
                            <img class="h-full w-full object-cover" src="<%= user.imageUrl %>" alt="User Image">
                        </div>
                        
                        <!-- User Info -->
                        <h1 class="text-white text-xl font-semibold mb-2">Name: <span class="text-blue-400"><%= user.name %></span></h1>
                        <h1 class="text-gray-400 mb-1">E-mail: <%= user.email %></h1>
                        <h1 class="text-gray-400 mb-6">Age: <%= user.age %></h1>
                        
                        <!-- Action Buttons -->
                        <div class="flex gap-4">
                            <a href="./edit/<%= user._id %>" class="px-5 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-500 transition">Edit</a>
                            <a href="/delete/<%= user._id %>" class="px-5 py-2 bg-red-600 text-white font-semibold rounded-lg shadow-md hover:bg-red-500 transition">Delete</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <h1 class="text-2xl text-gray-400 text-center w-full">User data is empty.</h1>
        <% } %>
    </div>
</body>

</html>
